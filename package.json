{
  "name": "purr-starter",
  "displayName": "Purr Starter",
  "version": "0.1.0",
  "description": "A modern Webpack starter kit fueled with a lot of cool stuff",
  "author": {
    "name": "Kevin Legrand",
    "email": "legrd.kevin@gmail.com",
    "url": "http://k-legrand.com"
  },
  "homepage": "http://k-legrand.com",
  "license": "MIT",
  "private": true,
  "keywords": [
    "webpack",
    "hot",
    "reload",
    "boilerplate",
    "starter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Manoz/purr-starter.git"
  },
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "preinstall": "node tools/nodeVersionCheck.js",
    "start-message": "babel-node tools/startMessage.js",
    "prestart": "npm run start-message",
    "start": "cross-env NODE_ENV=development npm run open:src",
    "open:src": "node tools/server.js",
    "open:dist": "cross-env NODE_ENV=production node tools/server.js",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint --ignore-path .gitignore --ignore-pattern tools",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --ignore-pattern tools --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "clean-dist": "rimraf ./dist",
    "prebuild": "npm run clean-dist",
    "build": "cross-env NODE_ENV=production node tools/build.js",
    "pretest": "npm run test:clean && npm run lint",
    "test:clean": "rimraf ./coverage",
    "test": "mocha-webpack --webpack-config tasks/webpack.config.test.js \"src/**/*.test.js\"",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "modernizr": "^3.6.0",
    "sanitize.css": "^6.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.24.5",
    "chalk": "^2.4.1",
    "circular-dependency-plugin": "^5.0.2",
    "connect-history-api-fallback": "^1.5.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "2.13.0",
    "eventsource-polyfill": "^0.9.6",
    "exports-loader": "^0.7.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-minifier-webpack-plugin": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.3.1",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "mocha-webpack": "2.0.0-beta.0",
    "node-sass": "^4.9.2",
    "null-loader": "^0.1.1",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss-loader": "^2.1.6",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "svg-url-loader": "^2.3.2",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-md5-hash": "^0.0.6",
    "webpack-node-externals": "^1.7.2",
    "webpack-pwa-manifest": "^3.6.2"
  }
}
